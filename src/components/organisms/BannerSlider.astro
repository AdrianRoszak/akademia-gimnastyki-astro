---
import Banner from './Banner.astro'

const { data } = Astro.props
---

<div class="swiper">
  <div class="swiper-wrapper">
    {data && data.map((banner) => (
      <div class="swiper-slide">
        <Banner data={banner} />
      </div>
    ))}
  </div>
</div>


<script type="module">
  import Swiper from 'https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.mjs'

  new Swiper('.swiper', {
    autoplay: {
      delay: 3000,
    },
    speed: 1500,
    loop: true,
    spaceBetween: 30,
  });
</script>

<style>
  .swiper {
    width: 100%;
    height: 100%;
  }
</style>