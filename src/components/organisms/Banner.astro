---
import { urlForImage } from '../../utils'

import { Image } from 'astro:assets'

import type { BannerType } from '../../data/digests/digest-home-page-data'
import Container from '../atoms/Container.astro'
import ArrowRight from '../atoms/icons/ArrowRight.astro'
import BodyText from '../molecules/BodyText.astro'
import Heading from '../molecules/Heading.astro'

interface Props {
  data: BannerType
}

const { data } = Astro.props
---

<div class="weirdo-banner">
  <Container>
    <div class="grid-wrapper">
      <div class="flex-wrapper">
        <div class="heading-lead-wrapper">
          <Heading as="h2" size="2xl" text={data.title} />
          <BodyText text={data.lead} />
        </div>
        {data.button && (
        <div class="slider-button">
          <a href="https://forms.office.com/r/zPghF4cykx" class="weirdo-button--color-accent-2" target="_blank">
            Zapisz swoje dziecko
            <ArrowRight width={30}/>
          </a>
        </div>
          )}
      </div>
      {data.images && (
        <div class="image-wrapper">
          <div class="transparent-image-background" />
          <Image
            src={urlForImage(data.images.mainImage!.source)
            .width(900)
            .format("webp")
            .quality(80)
            .url()}
              alt={data.images.mainImage!.alt}
              width={900}
              height={600}
          />
        </div>
      )}
    </div>
  </Container>
</div>

<style>
  .weirdo-banner {
    position: relative;
    display: flex;
    align-items: center;
    flex-direction: column;
    min-height: 700px;
    max-height: 950px;

    &::before {
      content: "";
      display: block;
      width: 100%;
      height: 6rem;
    }

    @media(min-width: 768px) {
      height: 100dvh;
      flex-direction: row;
      padding-top: 5rem;

      &::before {
        display: none;
        visibility: hidden;
      }
    }
  }

  .grid-wrapper {
    display: grid;
    grid-template-columns: 1fr;
    
    @media (min-width: 1024px) {
      grid-template-columns: 1fr 1fr;
      gap: 1rem;
      padding: 0 2.5rem;
    }
  }

  .flex-wrapper {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 2rem 0;

    @media (min-width: 1024px) {
      padding: 0;
    }
  }

  .heading-lead-wrapper {
    margin: 1rem 0 2rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;

    @media (min-width: 1024px) {
      margin: 1rem 0 0;
    }
  }

  .image-wrapper {
    grid-row: 1 / 1;
    position: relative;
    width: calc(100% + calc(var(--weirdo-container-padding-x) * 2));
    margin-left: calc(var(--weirdo-container-padding-x) * -1);

    &::after {
      content: "";
      display: block;
      padding-bottom: 75%;
    }

    @media (min-width: 1024px) {
      grid-row: auto;
    }
    
    img {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: contain;
      -webkit-filter: drop-shadow(5px 5px 5px rgba(0, 0, 0, 0.5));
      filter: drop-shadow(5px 5px 5px rgba(0, 0, 0, 0.5));
    }

    .transparent-image-background {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
      
      &::after,
      &:before {
        content: "";
        display: block;
        position: absolute;
      }
  
      &::after {
        top: 0;
        left: 0;
        width: 50%;
        height: 50%;
        background-color: var(--weirdo-color-accent-2);
      }
  
      &:before {
        bottom: 0;
        right: 0;
        width: 50%;
        height: 50%;
        background-color: var(--weirdo-color-accent-1);
      }
    }

  }
</style>