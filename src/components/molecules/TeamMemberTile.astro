---
import { Image } from 'astro:assets';
import { urlForImage } from '../../utils';
import Heading from '../molecules/Heading.astro';

const { image, name, bio } = Astro.props.data;
---

<div class:list={["team-member-tile"]}>
  <div class="image-wrapper" data-animation="fade-down">
    <Image
      src={urlForImage(image.source)
        .width(600)
        .format("webp")
        .quality(80)
        .url()}
      alt={image.alt}
      width={600}
      height={600}
    />
  </div>
  <div class="text-wrapper">
    <div data-animation="fade-down">
      <Heading as="h2" text={name} size="md" />
    </div>
    <p data-animation="fade-down">{bio}</p>
  </div>
</div>

<style>
  .team-member-tile {
    display: flex;
    flex-direction: column;
  }

  .image-wrapper {
    width: 90%;
    margin: 0 auto;
    position: relative;

    &::after {
      content: '';
      display: block;
      width: 100%;
      padding-top: 125%;
      height: fit-content;
    }

    img {
      position: absolute;
      width: 100%;
      height: 100%;
      top: 0;
      left: 0;
      object-fit: cover;
      /* TODO: ommon styles - extract to a shared file */
      -webkit-filter: drop-shadow(5px 5px 5px rgba(0, 0, 0, 0.5));
      filter: drop-shadow(5px 5px 5px rgba(0, 0, 0, 0.5));    
    }
  }

  .text-wrapper {
    flex-grow: 1;
    padding: 1.5rem 1rem;
    position: relative;

    &::after {
      content: '';
      display: block;
      position: absolute;
      top: 0;
      left: 50%;
      width: 100%;
      height: 100%;
      transform: translateX(-50%);
      background: linear-gradient(0deg, rgba(0, 0, 0, 0) 75%, rgba(0, 0, 0, 0.05) 100%);
      animation: inherit;
      opacity: 0;
    }

    h2 {
      margin-bottom: 0.5em;
    }

    p {
      margin-bottom: 0;
    }
  }
</style>
